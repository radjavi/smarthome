<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="radjavi.smarthome.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:id="@+id/connectionBar"
        android:background="@color/colorConnectionBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/connectionStatus"
            android:background="@drawable/redcircle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            >

        </FrameLayout>

        <TextView
            android:id="@+id/connectionStatusText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/titillium_web_bold"
            android:gravity="center_vertical"
            android:text="Disconnected"
            android:textColor="#7c7c7c"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Temperature"
        android:textColor="#747474"
        android:textStyle="bold"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/titillium_web"
        android:text="0Â°C"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/titillium_web"
        android:text="0%"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Alarm"
        android:textColor="#747474"
        android:textStyle="bold"
        android:textSize="12dp"
        />

    <Switch
        android:id="@+id/alarmSwitch"
        android:trackTint="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimaryLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        android:checked="false"

        />

    <TextView
        android:id="@+id/ledTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="Desk Light"
        android:textColor="#747474"
        android:textStyle="bold"
        android:textSize="12dp"
        />

    <Switch
        android:id="@+id/ledSwitch"
        android:trackTint="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimaryLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:checked="false"
        />

    <ToggleButton
        android:id="@+id/ipToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="IP"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="250dp"
        android:textOff="int.Ip"
        android:textOn="ext.Ip"
        />

    <Button
        android:id="@+id/BTN_FLASH"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btn_round_stroke"
        android:fontFamily="@font/titillium_web"
        android:text="F"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="12sp" />

    <Button
        android:id="@+id/BTN_SMOOTH"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btn_round_stroke"
        android:fontFamily="@font/titillium_web"
        android:text="S"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="12sp" />

    <Button
        android:id="@+id/BTN_BRIGHTNESS_UP"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btn_round_stroke"
        android:fontFamily="@font/titillium_web"
        android:text="+"
        android:textColor="@color/colorPrimaryLight" />

    <Button
        android:id="@+id/BTN_BRIGHTNESS_DOWN"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/btn_round_stroke"
        android:fontFamily="@font/titillium_web"
        android:text="-"
        android:textColor="@color/colorPrimaryLight" />

    <Button
        android:id="@+id/BTN_RED"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_red"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_ORANGE"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_orange"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_ORANGE2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_orange2"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_YELLOW"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_yellow"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_GREEN"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_green"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_TURQ"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_turq"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_BLUE3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_blue3"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_BLUE2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_blue2"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_BLUE"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_blue"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_PURPLE"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_purple"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_PINK"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_pink"
        android:fontFamily="@font/titillium_web" />

    <Button
        android:id="@+id/BTN_WHITE"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/btn_white"
        android:fontFamily="@font/titillium_web" />

</FrameLayout>
